BEGIN TRANSACTION;

CREATE TABLE cliente (
    id_cliente INTEGER PRIMARY KEY,
    nome TEXT NOT NULL,
    telefone TEXT NOT NULL,
    observacoes TEXT
);

CREATE TABLE endereco (
    id_endereco INTEGER PRIMARY KEY,
    id_cliente INTEGER NOT NULL,
    rua TEXT NOT NULL,
    numero TEXT NOT NULL,
    bairro TEXT NOT NULL,
    cidade TEXT NOT NULL,
    referencia TEXT,
    cep TEXT NOT NULL,
    FOREIGN KEY (id_cliente) REFERENCES cliente(id_cliente)
);

CREATE TABLE pedido (
    id_pedido INTEGER PRIMARY KEY,
    id_cliente INTEGER NOT NULL,
    id_endereco INTEGER NOT NULL,
    data_hora_recebimento TEXT NOT NULL,
    tempo_decorrido INTEGER,
    data_hora_inicio_preparo TEXT,
    data_hora_saida_entrega TEXT,
    data_hora_entregue TEXT,
    status_atual TEXT NOT NULL,
    tempo_total_preparo INTEGER,
    tempo_total_entrega INTEGER,
    tempo_total_pedido INTEGER,
    observacoes_do_pedido TEXT,
    valor_total REAL NOT NULL,
    FOREIGN KEY (id_cliente) REFERENCES cliente(id_cliente),
    FOREIGN KEY (id_endereco) REFERENCES endereco(id_endereco)
);

CREATE TABLE produto (
    id_produto INTEGER PRIMARY KEY,
    nome_produto TEXT NOT NULL,
    categoria TEXT NOT NULL,
    preco REAL NOT NULL,
    descricao TEXT,
    disponibilidade TEXT NOT NULL
);

CREATE TABLE item_pedido (
    id_item_pedido INTEGER PRIMARY KEY,
    id_pedido INTEGER NOT NULL,
    id_produto INTEGER NOT NULL,
    quantidade INTEGER NOT NULL,
    preco_unitario REAL NOT NULL,
    subtotal REAL NOT NULL,
    FOREIGN KEY (id_pedido) REFERENCES pedido(id_pedido),
    FOREIGN KEY (id_produto) REFERENCES produto(id_produto)
);

CREATE TABLE status_historico (
    id_status INTEGER PRIMARY KEY,
    id_pedido INTEGER NOT NULL,
    status TEXT NOT NULL,
    data_hora_status TEXT NOT NULL,
    FOREIGN KEY (id_pedido) REFERENCES pedido(id_pedido)
);

CREATE TABLE entregador (
    id_entregador INTEGER PRIMARY KEY,
    nome TEXT NOT NULL,
    telefone TEXT NOT NULL,
    placa_moto TEXT NOT NULL,
    turno_trabalho TEXT NOT NULL
);

CREATE TABLE rota (
    id_rota INTEGER PRIMARY KEY,
    nome_regiao TEXT NOT NULL,
    tempo_medio_estimado INTEGER NOT NULL
);

CREATE TABLE avaliacao (
    id_avaliacao INTEGER PRIMARY KEY,
    id_pedido INTEGER NOT NULL,
    nota INTEGER NOT NULL,
    comentario TEXT,
    data_avaliacao TEXT NOT NULL,
    FOREIGN KEY (id_pedido) REFERENCES pedido(id_pedido)
);

CREATE TABLE pagamento (
    id_pagamento INTEGER PRIMARY KEY,
    id_pedido INTEGER NOT NULL,
    forma_pagamento TEXT NOT NULL,
    valor_pago REAL NOT NULL,
    status_pagamento TEXT NOT NULL,
    FOREIGN KEY (id_pedido) REFERENCES pedido(id_pedido)
);

commit